# ===========================================
# V4 Connect CRM - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ===========================================
# Database (Supabase PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# ===========================================
# Authentication (Auth.js)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# Redis (for queues and WebSocket)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# Evolution API (WhatsApp Integration)
# ===========================================
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_API_KEY="your-evolution-api-key"

# ===========================================
# OpenAI (for AI features)
# ===========================================
OPENAI_API_KEY="sk-your-openai-api-key"

# ===========================================
# App URLs
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3002"
NEXT_PUBLIC_API_URL="http://localhost:3001"
API_URL="http://localhost:3001"
WS_URL="ws://localhost:3003"
AUTH_URL="http://localhost:3002"

# ===========================================
# Server Ports (defaults)
# ===========================================
# Web: 3002 (Next.js)
# API: 3001 (Hono)
# WebSocket: 3003
