# ===========================================
# V4 Connect CRM - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres

# Redis (for queues and real-time events)
# Local development: redis://localhost:6379
# Railway: Use the Redis URL from your Railway project
REDIS_URL=redis://localhost:6379

# Authentication
AUTH_SECRET=your-auth-secret-key-min-32-chars

# API Configuration
PORT=3002
API_URL=http://localhost:3002
CORS_ORIGIN=http://localhost:3000

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_WS_URL=http://localhost:3003
FRONTEND_URL=http://localhost:3000

# Supabase (for file storage)
SUPABASE_URL=https://[project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Evolution API (WhatsApp)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key

# Meta (Facebook/Instagram/Messenger)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Webhook Verify Tokens
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
INSTAGRAM_VERIFY_TOKEN=your-instagram-verify-token
MESSENGER_VERIFY_TOKEN=your-messenger-verify-token

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3002

# Testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
PLAYWRIGHT_BASE_URL=http://localhost:3000
