{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "warn"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "warn"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noMisleadingCharacterClass": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      ".next",
      ".turbo",
      ".vercel",
      "apps/web/e2e/.auth",
      "apps/web/playwright-report",
      "apps/web/test-results",
      "e2e/.auth",
      "playwright-report",
      "test-results",
      "dist",
      "build",
      ".expo",
      "*.config.js",
      "*.config.mjs",
      "**/__tests__/**",
      "**/vendors/**",
      "**/vendor/**",
      "**/*.min.js",
      "**/coverage/**"
    ]
  }
}
