{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "api": {
      "source": {
        "repo": "BadWolf1509/v4-connect-crm",
        "branch": "main",
        "rootDirectory": "apps/api"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm --filter @v4-connect/api build"
      },
      "deploy": {
        "startCommand": "node dist/index.js",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
      }
    },
    "worker": {
      "source": {
        "repo": "BadWolf1509/v4-connect-crm",
        "branch": "main",
        "rootDirectory": "apps/worker"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm --filter @v4-connect/worker build"
      },
      "deploy": {
        "startCommand": "node dist/index.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
      }
    },
    "websocket": {
      "source": {
        "repo": "BadWolf1509/v4-connect-crm",
        "branch": "main",
        "rootDirectory": "apps/websocket"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm --filter @v4-connect/websocket build"
      },
      "deploy": {
        "startCommand": "node dist/index.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
      }
    }
  }
}
