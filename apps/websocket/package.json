{
  "name": "@v4-connect/websocket",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --external socket.io --external ioredis --external @socket.io/redis-adapter",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "@v4-connect/types": "workspace:*",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "jose": "^5.2.4",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@v4-connect/typescript": "workspace:*",
    "@vitest/coverage-v8": "^2.1.8",
    "ioredis-mock": "^8.9.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
