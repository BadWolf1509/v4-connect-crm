{
  "name": "@v4-connect/worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --external bullmq --external ioredis --external openai",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@v4-connect/database": "workspace:*",
    "@v4-connect/types": "workspace:*",
    "bullmq": "^5.31.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.4.1",
    "nanoid": "^5.0.9",
    "openai": "^4.76.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@v4-connect/typescript": "workspace:*",
    "@vitest/coverage-v8": "^2.1.8",
    "ioredis-mock": "^8.9.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
