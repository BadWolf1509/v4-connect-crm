{
  "name": "v4-connect-crm",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "db:generate": "pnpm --filter @v4/database generate",
    "db:migrate": "pnpm --filter @v4/database migrate",
    "db:push": "pnpm --filter @v4/database push",
    "db:studio": "pnpm --filter @v4/database studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "next": "^15.1.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.1",
      "@types/react-dom": "^19.0.2"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
